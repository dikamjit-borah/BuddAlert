<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

   <LinearLayout

       android:layout_gravity="center"
       android:gravity="center"
       android:background="@drawable/login_bg"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">
       <ImageView


            android:layout_marginTop="@dimen/marginParent"
           android:layout_width="64dp"
           android:layout_height="64dp"
           android:src="@drawable/logo">

       </ImageView>
       <TextView


           android:layout_marginBottom="@dimen/marginParent"
           android:gravity="center"
           android:textColor="@color/white"

           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/app_name"
           android:textSize="72sp"></TextView>
   </LinearLayout>
   <LinearLayout

       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">
       <LinearLayout
           android:layout_margin="@dimen/marginParent"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
              <TextView
                  android:textColor="@color/primary2"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Emergency Contact"
                  >


              </TextView>
        <View
            android:background="@color/primary2"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1">

        </View>
          </LinearLayout>
           <com.google.android.material.button.MaterialButton


               android:id="@+id/btn_emergencyContact_ac_main"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@drawable/ic_button"
               android:padding="8dp"
               android:text="No contacts selected"
               android:textStyle="bold"
               android:layout_marginTop="4dp">

           </com.google.android.material.button.MaterialButton>



       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="@dimen/marginParent"
           android:layout_marginRight="@dimen/marginParent"
           android:orientation="horizontal">

           <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
               android:layout_width="0dp"
               android:layout_height="200dp"
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               android:layout_margin="6dp"
               android:layout_weight="1"
               android:elevation="5dp"
               app:cardCornerRadius="@dimen/cardRadius">

               <LinearLayout
                   android:id="@+id/ll_signIn_ac_main"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:gravity="center"
                   android:orientation="vertical">

                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="90dp"
                       android:src="@drawable/iconfinder_signin" />

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       android:text="@string/signin"
                       android:textColor="#4A00E0">

                   </TextView>
               </LinearLayout>
           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
               android:layout_width="0dp"
               android:layout_height="200dp"
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               android:layout_margin="6dp"
               android:layout_weight="1"
               android:elevation="5dp"
               app:cardCornerRadius="@dimen/cardRadius">

               <LinearLayout
                   android:background="@color/quantum_googred"
                   android:id="@+id/ll_help_ac_main"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:gravity="center"
                   android:orientation="vertical">

                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="90dp"
                       android:src="@drawable/iconfinder_help" />

                   <TextView
                       android:textColor="@color/white"
                       android:gravity="center"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="@string/helpme">

                   </TextView>
               </LinearLayout>
           </androidx.cardview.widget.CardView>
       </LinearLayout>

       <TextView
           android:visibility="gone"
           android:id="@+id/tv"
           android:textSize="42sp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="yoyoyo"></TextView>


   </LinearLayout>
</LinearLayout>